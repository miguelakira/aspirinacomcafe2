
<% @posts.each do |post| %>
<div class="box post" id="post-1">
    <div class="content">
  <div class="post-title"><h2><%= post.title %></h2></div>
  <div class="clr"></div>
  <div class="social-links">
	<div class="post-comments"> <a href="#" title="View Comments">15</a> Comentários</div>
	<!--/post-comments -->
	<div class="post-date">Publicado em <%= post.created_at.day %>/<%= post.created_at.month %>/<%= post.created_at.year %>, Em <%= post.category.title %></div>
	<div class="clr"></div>
  </div>
  <!--/social-links -->

  <div class="post-pic fl"> <a href="#" rel="bookmark" title="Permanent Link to Hello world!"><img src="/assets/img_1.jpg" alt="Post Pic" width="198" height="111" /></a> </div>

  <div class="post-excerpt">
    <strong><%= raw(post.description) %> </strong>
    <br />
    <p><span>Deixe seu  <a href="#" title="Leave Your Response">Comentário »</a></span></p>
  </div>
  <!--/post-excerpt -->
  <hr>
  </div>
   <!--/content -->
   <div class="clr"></div>
   </div>
   <!--/box -->

<% end %>
